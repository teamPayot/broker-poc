<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>broker-poc</display-name>
	<session-config>
		<session-timeout>25</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>SignupServlet</servlet-name>
		<servlet-class>fr.teamPayots.servlets.SignupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SigninServlet</servlet-name>
		<servlet-class>fr.teamPayots.servlets.SigninServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>fr.teamPayots.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserzoneServlet</servlet-name>
		<servlet-class>fr.teamPayots.servlets.UserzoneServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignupServlet</servlet-name>
		<url-pattern>/broker-poc/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SigninServlet</servlet-name>
		<url-pattern>/broker-poc/signin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/broker-poc/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserzoneServlet</servlet-name>
		<url-pattern>/broker-poc/restricted/userZone</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>RestrictionFilter</filter-name>
		<filter-class>fr.teamPayots.filters.RestrictionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>RestrictionFilter</filter-name>
		<url-pattern>/broker-poc/restricted/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>